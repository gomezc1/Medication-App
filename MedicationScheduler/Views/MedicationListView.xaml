<UserControl x:Class="MedicationScheduler.Views.MedicationListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="1100" d:DesignHeight="680"
             xmlns:converters="clr-namespace:MedicationScheduler.Converters"

             Background="{StaticResource PageBgBrush}">

    <UserControl.Resources>
        <!-- Primary pill button palette -->
        <SolidColorBrush x:Key="PrimaryBtnBg"         Color="#0F172A"/>
        <SolidColorBrush x:Key="PrimaryBtnBgHover"     Color="#162033"/>
        <SolidColorBrush x:Key="PrimaryBtnBgPressed"   Color="#0B1220"/>
        <SolidColorBrush x:Key="PrimaryBtnFg"          Color="White"/>

        <!-- Polished primary pill button -->
        <Style x:Key="PrimaryPillButton" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource PrimaryBtnFg}"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBtnBg}"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="MinWidth" Value="180"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="root"
                        CornerRadius="12"
                        Background="{TemplateBinding Background}"
                        SnapsToDevicePixels="True">
                            <ContentPresenter
                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                        RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Background" Value="{StaticResource PrimaryBtnBgHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="root" Property="Background" Value="{StaticResource PrimaryBtnBgPressed}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.55"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card style -->
        <Style x:Key="MedCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Margin" Value="0,0,0,18"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="1" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Badge -->
        <Style x:Key="BadgeBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Background" Value="#EFF6FF"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="Width" Value="60" />
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <!-- Bool -> Visibility -->
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:ToggleStatusTextConverter x:Key="ToggleStatusTextConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24,16,24,24">

            <!-- Header row -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Medication List" FontSize="28" FontWeight="Bold" Foreground="#0F172A"/>
                    <TextBlock Foreground="#6B7280" Margin="0,6,0,0">
                        <Run Text="Manage all your medications in one place |"/>
                        <Run Text="Total:"/>
                        <Run Text="{Binding TotalMedications, Mode=OneWay}" FontWeight="SemiBold"/>
                        <Run Text="| Active:"/>
                        <Run Text="{Binding ActiveMedications, Mode=OneWay}" FontWeight="SemiBold"/>
                    </TextBlock>
                </StackPanel>

                <Button Grid.Column="1"
                    Style="{StaticResource PrimaryPillButton}"
                    HorizontalAlignment="Right"
                    Margin="16,0,0,0"
                    x:Name="AddMedicationBtn"
                    Command="{Binding AddMedicationCommand}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="➕"
                   FontSize="16"
                   Margin="0,0,10,0"
                   VerticalAlignment="Center"/>
                        <TextBlock Text="Add Medication"
                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Search box -->
            <Border CornerRadius="10" Background="White" Padding="12" Margin="0,16,0,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Magnifying glass -->
                    <TextBlock Text="🔍"
                               Foreground="#9CA3AF"
                               VerticalAlignment="Center"/>

                    <!-- TextBox + faux placeholder -->
                    <Grid Grid.Column="1">
                        <TextBox x:Name="SearchBox"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Foreground="#111827"
                                 FontSize="14"/>
                        <!-- Placeholder overlay -->
                        <TextBlock Text="Search medications by name or generic name..."
                                   Foreground="#9CA3AF"
                                   Margin="2,0,0,0"
                                   IsHitTestVisible="False"
                                   VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>

                    <!-- Clear button -->
                    <Button Grid.Column="2"
                            Content="✕"
                            Command="{Binding ClearSearchCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#9CA3AF"
                            FontSize="16"
                            Padding="8,0"
                            Cursor="Hand"
                            Margin="4,0,0,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SearchText}" Value="">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding SearchText.Length, Converter={x:Null}}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- Loading indicator -->
            <Border CornerRadius="10" Background="White" Padding="24" Margin="0,0,0,12"
                    Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="⏳ Loading medications..." 
                               FontSize="16" 
                               Foreground="#6B7280"
                               HorizontalAlignment="Center"/>
                    <ProgressBar IsIndeterminate="True" 
                                 Width="200" 
                                 Height="4" 
                                 Margin="0,12,0,0"/>
                </StackPanel>
            </Border>

            <!-- Empty state -->
            <Border CornerRadius="10" Background="White" Padding="40" Margin="0,0,0,12">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding TotalMedications}" Value="0">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="💊" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                    <TextBlock Text="No medications found" 
                               FontSize="20" 
                               FontWeight="SemiBold"
                               Foreground="#0F172A"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Click 'Add Medication' to get started" 
                               FontSize="14" 
                               Foreground="#6B7280"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- Medication cards -->
            <ItemsControl ItemsSource="{Binding Medications}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource MedCard}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Accent bar - Color based on IsActive -->
                                <Border Grid.Column="0" CornerRadius="4">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#10B981"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                    <Setter Property="Background" Value="#EF4444"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>

                                <!-- Medication details -->
                                <StackPanel Grid.Column="1" Margin="16,0,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <!-- FIXED: Medication.Name instead of Name -->
                                        <TextBlock Text="{Binding Medication.Name}" 
                                                   FontSize="18" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#0F172A"/>
                                        <!--- Generic Name -->
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Text="Generic Name" FontSize="12" FontWeight="SemiBold" Foreground="#94A3B8" Margin="8,0,0,0"/>
                                            <TextBlock Text="{Binding Medication.GenericName}"
                                                         FontSize="12"
                                                         FontStyle="Italic"
                                                         Foreground="#94A3B8"
                                                         Margin="8,2,0,0"/>
                                        </StackPanel>
                                        <!-- Active badge -->
                                        <Border Style="{StaticResource BadgeBorder}" Margin="8,0,0,0"
                                                Visibility="{Binding IsActive, Converter={StaticResource BoolToVis}}">
                                            <TextBlock Text="active" 
                                                       TextAlignment="Center"
                                                       Foreground="#2563EB" FontSize="12" FontWeight="SemiBold"/>
                                        </Border>

                                        <!-- Inactive badge -->
                                        <Border CornerRadius="8" Background="#FEE2E2" Padding="4" Margin="8,0,0,0">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="inactive" 
                                                       TextAlignment="Center"
                                                       Foreground="#DC2626" FontSize="12" FontWeight="SemiBold"/>
                                        </Border>
                                    </StackPanel>

                                    <!-- FIXED: Generic name -->
                                    <TextBlock Text="{Binding Medication.GenericName}" 
                                               Margin="0,4,0,0" 
                                               Foreground="#64748B"
                                               FontStyle="Italic"
                                               FontSize="13"/>

                                    <!-- FIXED: Dosage display -->
                                    <TextBlock Margin="0,8,0,0" Foreground="#475569">
                                        <Run Text="{Binding UserDose, Mode=OneWay}"/>
                                        <Run Text=" "/>
                                        <Run Text="{Binding UserDoseUnit, Mode=OneWay}"/>
                                        <Run Text=" | "/>
                                        <Run Text="{Binding Medication.DosageForm, Mode=OneWay}"/>
                                    </TextBlock>

                                    <!-- FIXED: Frequency -->
                                    <TextBlock Foreground="#64748B" Margin="0,4,0,0">
                                        <Run Text="Frequency:"/>
                                        <Run Text="{Binding Frequency, Mode=OneWay}"/>
                                        <Run Text="x daily"/>
                                    </TextBlock>

                                    <!-- FIXED: Timing preferences display -->
                                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                        <TextBlock Text="🕐" Foreground="#64748B" VerticalAlignment="Center"/>
                                        <TextBlock Foreground="#64748B" Margin="6,0,0,0">
                                            <Run Text="Times:"/>
                                            <Run Text="{Binding TimingPreferencesDisplay, Mode=OneWay}"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <!-- Special instructions -->
                                    <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                        <StackPanel.Style>
                                            <Style TargetType="StackPanel">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding WithFood}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </StackPanel.Style>
                                        <TextBlock Text="🍽️" Foreground="#64748B" VerticalAlignment="Center"/>
                                        <TextBlock Text="Take with food" Foreground="#64748B" Margin="6,0,0,0" FontSize="12"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                        <StackPanel.Style>
                                            <Style TargetType="StackPanel">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding OnEmptyStomach}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </StackPanel.Style>
                                        <TextBlock Text="⚠️" Foreground="#64748B" VerticalAlignment="Center"/>
                                        <TextBlock Text="Take on empty stomach" Foreground="#64748B" Margin="6,0,0,0" FontSize="12"/>
                                    </StackPanel>

                                    <!-- Start date -->
                                    <TextBlock Foreground="#94A3B8" Margin="0,8,0,0" FontSize="12">
                                        <Run Text="Started:"/>
                                        <Run Text="{Binding StartDate, StringFormat='{}{0:MMM dd, yyyy}', Mode=OneWay}"/>
                                    </TextBlock>
                                </StackPanel>

                                <!-- Menu dots -->
                                <Button Grid.Column="2"
                                        Content="⋯" 
                                        Padding="8,0"
                                        FontSize="20"
                                        Background="Transparent"
                                        BorderBrush="{x:Null}"
                                        Foreground="#6B7280"
                                        Cursor="Hand"
                                        Tag="{Binding}"
                                        Click="CardMenuButton_Click">
                                    <Button.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Edit"
                                                      Click="EditMenuItem_Click"
                                                      CommandParameter="{Binding PlacementTarget.Tag,
                                                      RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                            <MenuItem Header="{Binding IsActive, Converter={StaticResource ToggleStatusTextConverter}}"
                                                      Click="ToggleActiveMenuItem_Click"
                                                      CommandParameter="{Binding PlacementTarget.Tag,
                                                      RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                            <Separator/>
                                            <MenuItem Header="Delete"
                                                      Click="DeleteMenuItem_Click"
                                                      CommandParameter="{Binding PlacementTarget.Tag,
                                                      RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                        </ContextMenu>
                                    </Button.ContextMenu>
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </StackPanel>
    </ScrollViewer>
</UserControl>
