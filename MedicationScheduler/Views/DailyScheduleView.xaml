<UserControl x:Class="MedicationScheduler.Views.DailyScheduleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="1000" d:DesignHeight="680"
             Background="{StaticResource PageBgBrush}">

    <UserControl.Resources>
        <!-- Bool to Visibility converter -->
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Info Card Style -->
        <Style x:Key="InfoCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="1" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Action Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#0F172A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="24,16,24,24">
                <!-- Header Section -->
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Daily Schedule"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="#0F172A"
                                   Margin="0,0,0,4"/>
                        <TextBlock Foreground="#6B7280">
                            <Run Text="Track your medication schedule for"/>
                            <Run Text="{Binding ScheduleDate, Mode=OneWay}" FontWeight="SemiBold"/>
                        </TextBlock>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                        <Button Content="🔄 Refresh"
                                Command="{Binding RefreshScheduleCommand}"
                                Style="{StaticResource ActionButton}"
                                Margin="0,0,8,0"
                                Padding="12,8"/>
                        <Button Content="📄 Export PDF"
                                Command="{Binding ExportScheduleCommand}"
                                Style="{StaticResource ActionButton}"
                                Background="#2563EB"
                                Padding="12,8"/>
                    </StackPanel>
                </Grid>

                <!-- Statistics Cards -->
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total Medications Card -->
                    <Border Grid.Column="0" Style="{StaticResource InfoCard}" Background="#EFF6FF" Padding="16" Margin="0">
                        <StackPanel>
                            <TextBlock Text="💊" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding TotalMedications}"
                                       FontSize="32"
                                       FontWeight="Bold"
                                       Foreground="#1E40AF"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Active Medications"
                                       Foreground="#3B82F6"
                                       HorizontalAlignment="Center"
                                       FontSize="13"/>
                        </StackPanel>
                    </Border>

                    <!-- Total Doses Card -->
                    <Border Grid.Column="2" Style="{StaticResource InfoCard}" Background="#F0FDF4" Padding="16" Margin="0">
                        <StackPanel>
                            <TextBlock Text="📋" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding TotalDoses}"
                                       FontSize="32"
                                       FontWeight="Bold"
                                       Foreground="#15803D"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Doses Today"
                                       Foreground="#22C55E"
                                       HorizontalAlignment="Center"
                                       FontSize="13"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Loading Indicator -->
                <Border Style="{StaticResource InfoCard}"
                        Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}">
                    <StackPanel HorizontalAlignment="Center" >
                        <TextBlock Text="⏳ Loading schedule..." 
                                   FontSize="16" 
                                   Foreground="#6B7280"
                                   HorizontalAlignment="Center"/>
                        <ProgressBar IsIndeterminate="True" 
                                     Width="200" 
                                     Height="4" 
                                     Margin="0,12,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Empty State -->
                <Border>
                    <Border.Style>
                        <Style TargetType="Border" BasedOn="{StaticResource InfoCard}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasSchedule}" Value="False">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="📅" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                        <TextBlock Text="No Schedule Available"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="#0F172A"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Add some medications to generate your daily schedule"
                                   Foreground="#6B7280"
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Schedule Items -->
                <Border Style="{StaticResource InfoCard}"
                        Visibility="{Binding HasSchedule, Converter={StaticResource BoolToVis}}">
                    <StackPanel>
                        <TextBlock Text="Today's Medications"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="#0F172A"
                                   Margin="0,0,0,16"/>

                        <!-- FIXED: Bind to ScheduleItems instead of Items -->
                        <ItemsControl ItemsSource="{Binding ScheduleItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="12"
                                            Margin="0,0,0,12"
                                            Background="{Binding AccentBrush}">
                                        <Grid Margin="20,14">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Time Label -->
                                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                <TextBlock Text="🕐"
                                                           FontSize="24"
                                                           HorizontalAlignment="Center"
                                                           Margin="0,0,0,4"/>
                                                <TextBlock Text="{Binding TimeLabel}"
                                                           HorizontalAlignment="Center"
                                                           Foreground="White"
                                                           FontSize="16"
                                                           FontWeight="Bold"/>
                                            </StackPanel>

                                            <!-- Medication Details -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding MedicationName}"
                                                           Foreground="White"
                                                           FontSize="18"
                                                           FontWeight="SemiBold"
                                                           Margin="0,0,0,4"/>
                                                <TextBlock Text="{Binding Dosage}"
                                                           Foreground="White"
                                                           FontSize="14"
                                                           Opacity="0.9"
                                                           Margin="0,0,0,6"/>
                                                <TextBlock Text="{Binding Instructions}"
                                                           Foreground="White"
                                                           FontSize="12"
                                                           Opacity="0.85"
                                                           TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Educational Disclaimer -->
                <Border Background="#FEF3C7" 
                        BorderBrush="#F59E0B" 
                        BorderThickness="1"
                        CornerRadius="8" 
                        Padding="16"
                        Margin="0,8,0,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⚠️" 
                                   FontSize="20" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,0"/>
                        <TextBlock TextWrapping="Wrap" 
                                   Foreground="#92400E"
                                   VerticalAlignment="Center">
                            <Run Text="Educational Use Only:" FontWeight="Bold"/>
                            <Run Text="This schedule is for educational purposes. Always consult your healthcare provider before making medication decisions."/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
