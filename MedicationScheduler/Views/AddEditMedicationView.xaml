<UserControl x:Class="MedicationScheduler.Views.AddEditMedicationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:MedicationScheduler.Converters"
             mc:Ignorable="d"
             d:DesignWidth="920" d:DesignHeight="680"
             Background="Transparent">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
       
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <converters:CountToVisConverter x:Key="CountToVisConverter"/>
        <converters:NullToVisConverter x:Key="NullToVisConverter"/>
        <converters:ContainsConverter x:Key="ContainsConverter"/>
        <converters:TimeSpanToStringConverter x:Key="TimeSpanToStringConverter"/>
        

        <Style x:Key="WatermarkTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#F7F8FA"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost"/>
                                <TextBlock x:Name="Watermark"
                                           Margin="12,0"
                                           Foreground="#9AA4B2"
                                           IsHitTestVisible="False"
                                           VerticalAlignment="Center"
                                           Text="{TemplateBinding Tag}"
                                           Visibility="Collapsed"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}"
                                         Value="">
                                <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#2563EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Background" Value="#0B1220"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#0B1220"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Background" Value="#EEF2F7"/>
            <Setter Property="Foreground" Value="#0F172A"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
        </Style>

        <Style x:Key="TimingPrefButton" TargetType="ToggleButton">
            <Setter Property="Background" Value="#F7F8FA"/>
            <Setter Property="Foreground" Value="#0F172A"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="MinWidth" Value="90"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2563EB"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#2563EB"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="Transparent" Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Margin="0,0,0,12">
            <TextBlock FontSize="20" FontWeight="SemiBold" Foreground="#0F172A">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Text" Value="Add New Medication"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsEditMode}" Value="True">
                                <Setter Property="Text" Value="Edit Medication"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            <TextBlock Text="Enter the medication details and schedule"
                       Margin="0,6,0,0"
                       Foreground="#6B7280"/>
        </StackPanel>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Border Background="White"
                    CornerRadius="12"
                    Padding="24"
                    Margin="0,0,0,12">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="2" Opacity="0.15"/>
                </Border.Effect>

                <StackPanel>
                    <!-- Medication Search Section -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Search Medication"
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Foreground="#0F172A"
                                   Margin="0,0,0,8"/>
                        
                        <!-- FIXED: Bind to SearchTerm -->
                        <TextBox Style="{StaticResource WatermarkTextBox}"
                                 Tag="Type to search medications (e.g., Lisinopril, Metformin)..."
                                 Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                                 Height="44"
                                 FontSize="14"/>

                        <!-- Search Results Dropdown -->
                        <Border CornerRadius="8"
                                Background="White"
                                BorderBrush="#E5E7EB"
                                BorderThickness="1"
                                MaxHeight="200"
                                Margin="0,4,0,0">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SearchResults.Count, Converter={StaticResource CountToVisConverter}}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <ListBox ItemsSource="{Binding SearchResults}"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Button Command="{Binding DataContext.SelectMedicationCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                HorizontalContentAlignment="Left"
                                                Padding="12,8"
                                                Cursor="Hand">
                                            <StackPanel>
                                                <TextBlock Text="{Binding DisplayText}" FontWeight="SemiBold" Foreground="#0F172A"/>
                                                <!--<TextBlock Text="{Binding Medication.GenericName}" Foreground="#6B7280" FontSize="12" Margin="0,2,0,0"/>-->
                                            </StackPanel>
                                        </Button>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Border>

                        <!-- Selected Medication Display -->
                        <Border CornerRadius="8"
                                Background="#EFF6FF"
                                BorderBrush="#2563EB"
                                BorderThickness="1"
                                Padding="12"
                                Margin="0,8,0,0"
                                Visibility="{Binding SelectedMedication, Converter={StaticResource NullToVisConverter}}">
                            <StackPanel>
                                <TextBlock Text="Selected:" Foreground="#1E40AF" FontSize="12" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding SelectedMedication.Name}" FontWeight="SemiBold" Foreground="#0F172A" Margin="0,4,0,0"/>
                                <TextBlock Text="{Binding SelectedMedication.GenericName}" Foreground="#6B7280" FontSize="12" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Dosage Section -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="220"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Dosage"
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       Foreground="#0F172A"
                                       Margin="0,0,0,8"/>
                            <!-- FIXED: Bind to Dose -->
                            <TextBox Style="{StaticResource WatermarkTextBox}"
                                     Tag="e.g., 500"
                                     Text="{Binding Dose, UpdateSourceTrigger=PropertyChanged}"
                                     Height="44"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Unit"
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       Foreground="#0F172A"
                                       Margin="0,0,0,8"/>
                            <Border CornerRadius="8"
                                    Background="#F7F8FA"
                                    BorderBrush="#E5E7EB"
                                    BorderThickness="1">
                                <!-- FIXED: Bind to DoseUnit and DoseUnits collection -->
                                <ComboBox ItemsSource="{Binding DoseUnits}"
                                          SelectedItem="{Binding DoseUnit}"
                                          Background="#F7F8FA"
                                          BorderThickness="0"
                                          Padding="12,8"
                                          Height="44"
                                          VerticalContentAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- Frequency Section -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Frequency (times per day)"
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Foreground="#0F172A"
                                   Margin="0,0,0,8"/>
                        <Border CornerRadius="8"
                                Background="#F7F8FA"
                                BorderBrush="#E5E7EB"
                                BorderThickness="1">
                            <!-- FIXED: Bind to Frequency and FrequencyOptions -->
                            <ComboBox ItemsSource="{Binding FrequencyOptions}"
                                      SelectedItem="{Binding Frequency}"
                                      Background="#F7F8FA"
                                      BorderThickness="0"
                                      Padding="12,8"
                                      Height="44"
                                      VerticalContentAlignment="Center"/>
                        </Border>
                    </StackPanel>

                    <!-- Timing Mode Toggle -->
                    <StackPanel Margin="0,0,0,12">
                        <TextBlock Text="Schedule Type"
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Foreground="#0F172A"
                                   Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal">
                            <RadioButton Content="Timing Preferences" 
                                         IsChecked="{Binding UseSpecificTimes, Converter={StaticResource InverseBoolConverter}}"
                                         Margin="0,0,16,0"
                                         Foreground="#0F172A"/>
                            <RadioButton Content="Specific Times" 
                                         IsChecked="{Binding UseSpecificTimes}"
                                         Foreground="#0F172A"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Timing Preferences Section -->
                    <StackPanel Margin="0,0,0,20">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding UseSpecificTimes}" Value="False">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        
                        <TextBlock Text="Timing Preferences"
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Foreground="#0F172A"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Select when you typically take this medication"
                                   Foreground="#6B7280"
                                   FontSize="12"
                                   Margin="0,0,0,8"/>
                        
                        <!-- FIXED: Add timing preference buttons -->
                        <WrapPanel>
                            <ToggleButton x:Name="MorningBtn"
                                          Content="Morning" 
                                          Style="{StaticResource TimingPrefButton}"
                                          Margin="0,0,8,8"
                                          Checked="TimingPref_Checked"
                                          Unchecked="TimingPref_Unchecked"
                                          Tag="Morning"/>
                            <ToggleButton x:Name="NoonBtn"
                                          Content="Noon" 
                                          Style="{StaticResource TimingPrefButton}"
                                          Margin="0,0,8,8"
                                          Checked="TimingPref_Checked"
                                          Unchecked="TimingPref_Unchecked"
                                          Tag="Noon"/>
                            <ToggleButton x:Name="EveningBtn"
                                          Content="Evening" 
                                          Style="{StaticResource TimingPrefButton}"
                                          Margin="0,0,8,8"
                                          Checked="TimingPref_Checked"
                                          Unchecked="TimingPref_Unchecked"
                                          Tag="Evening"/>
                            <ToggleButton x:Name="BedtimeBtn"
                                          Content="Bedtime" 
                                          Style="{StaticResource TimingPrefButton}"
                                          Margin="0,0,8,8"
                                          Checked="TimingPref_Checked"
                                          Unchecked="TimingPref_Unchecked"
                                          Tag="Bedtime"/>
                        </WrapPanel>
                    </StackPanel>

                    <!-- Specific Times Section -->
                    <StackPanel Margin="0,0,0,20">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding UseSpecificTimes}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Specific Times"
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       Foreground="#0F172A"/>

                            <!-- FIXED: Bind to AddSpecificTimeCommand -->
                            <Button Grid.Column="1"
                                    Style="{StaticResource SecondaryButton}"
                                    Command="{Binding AddSpecificTimeCommand}"
                                    Height="36"
                                    Padding="12,6">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="+" Margin="0,0,6,0" FontWeight="Bold"/>
                                    <TextBlock Text="Add Time"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- FIXED: Bind to SpecificTimes collection -->
                        <ItemsControl ItemsSource="{Binding SpecificTimes}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox Text="{Binding ., StringFormat='hh\\:mm tt', Mode=TwoWay}"
                                                 Style="{StaticResource WatermarkTextBox}"
                                                 Tag="e.g., 08:00 AM"
                                                 Height="40"/>

                                        <Button Grid.Column="1"
                                                Content="Remove"
                                                Style="{StaticResource SecondaryButton}"
                                                Command="{Binding DataContext.RemoveSpecificTimeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Padding="12,6"
                                                Margin="8,0,0,0"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Special Instructions -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Special Instructions"
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Foreground="#0F172A"
                                   Margin="0,0,0,8"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <!-- FIXED: Bind to WithFood -->
                            <CheckBox Content="Take with food"
                                      IsChecked="{Binding WithFood}"
                                      Foreground="#0F172A"
                                      Margin="0,0,20,0"/>
                            <!-- FIXED: Bind to OnEmptyStomach -->
                            <CheckBox Content="Take on empty stomach"
                                      IsChecked="{Binding OnEmptyStomach}"
                                      Foreground="#0F172A"/>
                        </StackPanel>

                        <!-- FIXED: Bind to SpecialInstructions -->
                        <TextBox Style="{StaticResource WatermarkTextBox}"
                                 Tag="Additional instructions (optional)..."
                                 Text="{Binding SpecialInstructions, UpdateSourceTrigger=PropertyChanged}"
                                 Height="80"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalContentAlignment="Top"
                                 Padding="12"/>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>

                        <!-- FIXED: Bind to SaveCommand -->
                        <Button Grid.Column="1"
                                Command="{Binding SaveCommand}"
                                Height="44">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource RoundedButton}">
                                    <Setter Property="Content" Value="Add Medication"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsEditMode}" Value="True">
                                            <Setter Property="Content" Value="Save Changes"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- FIXED: Bind to CancelCommand -->
                        <Button Grid.Column="3"
                                Style="{StaticResource SecondaryButton}"
                                Content="Cancel"
                                Command="{Binding CancelCommand}"
                                Height="44"/>
                    </Grid>

                    <!-- Loading Overlay -->
                    <Border Background="#80FFFFFF"
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"
                            CornerRadius="12">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="⏳ Processing..." 
                                       FontSize="16" 
                                       Foreground="#6B7280"
                                       HorizontalAlignment="Center"/>
                            <ProgressBar IsIndeterminate="True" 
                                         Width="200" 
                                         Height="4" 
                                         Margin="0,12,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</UserControl>
