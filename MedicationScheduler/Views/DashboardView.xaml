<UserControl x:Class="MedicationScheduler.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:MedicationScheduler.Converters"
             mc:Ignorable="d"
             d:DesignWidth="900" d:DesignHeight="500">

    <UserControl.Resources>
        <DropShadowEffect x:Key="CardShadow" BlurRadius="16" ShadowDepth="2" Opacity="0.18"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:InverseCountToVisibilityConverter x:Key="InverseCountToVisibilityConverter"/>
    </UserControl.Resources>

    <Border Background="Transparent" Padding="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Warning Banner -->
            <Border Grid.Row="0"
                    Background="#FFF7ED"
                    BorderBrush="#F59E0B"
                    BorderThickness="1"
                    CornerRadius="10"
                    Padding="12"
                    Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="⚠"
                               FontSize="16"
                               Foreground="#92400E"
                               VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="2"
                               Text="Not Medical Advice — Educational Prototype"
                               Foreground="#92400E"
                               FontSize="15"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Statistics Cards -->
            <Grid Grid.Row="1" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Active Medications Card -->
                <Border Grid.Column="0"
                        Background="#1E88E5"
                        CornerRadius="14"
                        Padding="20"
                        Effect="{StaticResource CardShadow}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Medications"
                                   Foreground="White"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Opacity="0.95"/>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Bottom">
                            <TextBlock Text="{Binding ActiveMedicationsCount}"
                                       Foreground="White"
                                       FontSize="56"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="active"
                                       Margin="8,0,0,12"
                                       VerticalAlignment="Bottom"
                                       Foreground="White"
                                       Opacity="0.9"
                                       FontSize="16"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Upcoming Dose Card -->
                <Border Grid.Column="2"
                        Background="#17B8A6"
                        CornerRadius="14"
                        Padding="20"
                        Effect="{StaticResource CardShadow}">
                    <StackPanel>
                        <TextBlock Text="Upcoming Dose"
                                   Foreground="White"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Opacity="0.95"/>
                        <TextBlock Text="{Binding UpcomingDose}"
                                   Margin="0,8,0,0"
                                   Foreground="White"
                                   FontSize="28"
                                   FontWeight="SemiBold"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Interactions Card -->
                <Border Grid.Column="4"
                        Background="#F57C20"
                        CornerRadius="14"
                        Padding="20"
                        Effect="{StaticResource CardShadow}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Interactions"
                                   Foreground="White"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Opacity="0.95"/>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Bottom">
                            <TextBlock Text="{Binding InteractionsCount}"
                                       Foreground="White"
                                       FontSize="56"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="found"
                                       Margin="8,0,0,12"
                                       VerticalAlignment="Bottom"
                                       Foreground="White"
                                       Opacity="0.9"
                                       FontSize="16"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Today's Schedule Section -->
            <Border Grid.Row="2"
                    Background="White"
                    CornerRadius="14"
                    Padding="20"
                    Effect="{StaticResource CardShadow}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="16"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Today's Schedule"
                               FontSize="22"
                               FontWeight="SemiBold"
                               Foreground="#0F172A"/>

                    <!-- Schedule Items -->
                    <ScrollViewer Grid.Row="2" 
                                  VerticalScrollBarVisibility="Auto"
                                  Visibility="{Binding HasSchedule, Converter={StaticResource BoolToVis}}">
                        <ItemsControl ItemsSource="{Binding TodaySchedule}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="3"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,4,12,8">
                                        <TextBlock Text="{Binding TimeLabel}"
                                                   Foreground="#64748B"
                                                   FontWeight="SemiBold"
                                                   Margin="0,0,0,8"/>
                                        <Border Background="{Binding AccentBrush}"
                                                CornerRadius="10"
                                                Padding="16,10">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}"
                                                           Foreground="White"
                                                           FontWeight="SemiBold"
                                                           TextWrapping="Wrap"/>
                                                <TextBlock Text="{Binding Dosage}"
                                                           Foreground="#E5E7EB"
                                                           FontSize="12"
                                                           Margin="0,4,0,0"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Empty State -->
                    <StackPanel Grid.Row="2" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                Visibility="{Binding HasSchedule, Converter={StaticResource InverseCountToVisibilityConverter}}">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasSchedule}" Value="False">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                        <TextBlock Text="📅" 
                                   FontSize="48" 
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,12"/>
                        <TextBlock Text="No Schedule Available"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="#0F172A"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Add medications to see your daily schedule"
                                   Foreground="#6B7280"
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,0"/>
                    </StackPanel>

                    <!-- Loading Indicator -->
                    <StackPanel Grid.Row="2"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}">
                        <TextBlock Text="⏳ Loading dashboard..." 
                                   FontSize="16" 
                                   Foreground="#6B7280"
                                   HorizontalAlignment="Center"/>
                        <ProgressBar IsIndeterminate="True" 
                                     Width="200" 
                                     Height="4" 
                                     Margin="0,12,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
