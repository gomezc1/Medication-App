<Application x:Class="MedicationScheduler.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Startup="Application_Startup">
    <Application.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="PrimaryBlueBrush" Color="#1E88E5"/>
        <SolidColorBrush x:Key="TealBrush"         Color="#1EB8A6"/>
        <SolidColorBrush x:Key="OrangeBrush"       Color="#F47A1F"/>
        <SolidColorBrush x:Key="SidebarBrush"      Color="#1976D2"/>
        <SolidColorBrush x:Key="PageBgBrush"       Color="#F3F4F6"/>

        <!-- Card -->
        <Style x:Key="InfoCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Background"   Value="White"/>
            <Setter Property="Padding"      Value="16"/>
            <Setter Property="Margin"       Value="0,0,16,0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="2" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Segoe MDL2 icons -->
        <FontFamily x:Key="IconFont">Segoe MDL2 Assets</FontFamily>

        <!-- Nav button (pill) -->
        <Style x:Key="NavButton" TargetType="ToggleButton">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Margin" Value="16,6,16,6"/>
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="root" CornerRadius="8" Padding="12" Background="{TemplateBinding Background}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="28"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{TemplateBinding Tag}" Grid.Column="0"
                       FontFamily="{StaticResource IconFont}" FontSize="14" VerticalAlignment="Center"/>
                                <ContentPresenter Grid.Column="1" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Selected/Checked (current page) -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="root" Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="#0F172A"/>
                            </Trigger>
                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#FFFFFF22"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- Schedule row -->
        <DataTemplate x:Key="ScheduleRowTemplate">
            <Grid Margin="0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding Time}" VerticalAlignment="Center"
                   Foreground="#334155" FontWeight="SemiBold"/>
                <Border Grid.Column="1" CornerRadius="8" Height="44" Padding="12,0"
                Background="{Binding PillBrush}" VerticalAlignment="Center">
                    <TextBlock Text="{Binding Name}" Foreground="White" FontWeight="SemiBold"
                     VerticalAlignment="Center"/>
                </Border>
            </Grid>
        </DataTemplate>
    </Application.Resources>
</Application>
